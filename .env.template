# Admin Account (for initial setup only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Security Settings
SESSION_TIMEOUT=3600
SSL_ENABLED=False

# CSRF Configuration
CSRF_ENABLED=True
CSRF_TIME_LIMIT=3600  # Time limit in seconds
