# Rate Limiting Configuration
REDIS_URL=redis://localhost:6379/0

# User Role Rate Limits
USER_HOURLY_LIMIT=10
USER_DAILY_LIMIT=50
USER_CONCURRENT_LIMIT=2

PREMIUM_HOURLY_LIMIT=50
PREMIUM_DAILY_LIMIT=200
PREMIUM_CONCURRENT_LIMIT=5

ADMIN_HOURLY_LIMIT=100
ADMIN_DAILY_LIMIT=500
ADMIN_CONCURRENT_LIMIT=10

# API Rate Limiting
