# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_2FA=True
ENABLE_PASSWORD_RESET=True
ENABLE_REGISTRATION=True
ENABLE_SOCIAL_LOGIN=False 