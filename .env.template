RATE_LIMIT_STRATEGY=fixed-window-elastic-expiry

# Registration Rate Limits
REGISTRATION_HOURLY_PER_IP=3
REGISTRATION_DAILY_PER_IP=5
REGISTRATION_MONTHLY_PER_IP=10
REGISTRATION_DAILY_PER_BROWSER=2

# API Rate Limits
API_RATE_LIMIT_USER_HOURLY=20
API_RATE_LIMIT_USER_DAILY=100
API_RATE_LIMIT_USER_CONCURRENT=2
API_RATE_LIMIT_PREMIUM_HOURLY=50
API_RATE_LIMIT_PREMIUM_DAILY=200
API_RATE_LIMIT_PREMIUM_CONCURRENT=5
API_RATE_LIMIT_ADMIN_HOURLY=1000
API_RATE_LIMIT_ADMIN_DAILY=5000
API_RATE_LIMIT_ADMIN_CONCURRENT=10

# Authentication Rate Limits
AUTH_MAX_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900
