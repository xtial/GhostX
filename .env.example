# Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Development Settings
DEV_PORT=5000
DEV_HOST=127.0.0.1
DEV_DOMAIN=localhost:5000
DEV_DOMAIN_SCHEME=http

# Production Settings
PROD_PORT=80
PROD_HOST=0.0.0.0
PROD_DOMAIN=your-domain.com
PROD_DOMAIN_SCHEME=https

# SMTP Configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password

# File Paths
EMAIL_COUNT_FILE=data/email_counts.json
LOG_FILE_PATH=logs/app.log

# Domain Configuration
DOMAIN=your-domain.com
DOMAIN_SCHEME=https
PORT=80

# Database Configuration
DATABASE_URL=sqlite:///spoofer.db
SECRET_KEY=your-secret-key-here

# Rate Limiting
MAX_EMAILS_PER_HOUR=10
MAX_EMAILS_PER_DAY=50

# Security
WTF_CSRF_SECRET_KEY=your-csrf-secret-key-here
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True 